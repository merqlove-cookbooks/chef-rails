[Unit]
Description=Ethminer client
Requires=network.target

[Service]
Type=forking
User=%I
ExecStart=<%= node['rails']['ethereum']['bin'] %> -S <%= @pool_address %> -u <%= @wallet_address %>
Restart=on-failure

[Install]
WantedBy=multi-user.target
