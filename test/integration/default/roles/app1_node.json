{
  "chef_type": "role",
  "json_class": "Chef::Role",
  "name": "app1_node",
  "description": "",
  "default_attributes": {
    "nginx": {
      "default_site_enabled": true
    },
    "rails": {
      "swap": {
        "enable": true,
        "size": 512
      },
      "duplicity": {
        "target": "backup_azure",
        "pass_key_id": "main",
        "method": "azure",
        "db": [
          "postgresql",
          "mongo"
        ]
      },
      "apps": {
        "www_christ_leather_ru": {
          "backup": true,
          "ruby_server": {
            "enable": true,
            "type": "puma",
            "environment": "production",
            "www": true,
            "vars": {
              "MAX_THREADS": 8,
              "MAX_WORKERS": 0,
              "SECRET_TOKEN": "SOMETOKEN",
              "POOL": 8
            },
            "server_name": [
                "christ-leather.ru"
            ]
          },
          "db": [
            {
              "type": "postgresql",
              "name": "christ_db",
              "user": "christ",
              "password": "12345678",
              "pool": 8
            },
            {
              "type": "mongodb",
              "name": "bobrtube_db",
              "user": "bobr",
              "password": "12345678"
            }
          ],
          "name": "www_christ_leather_ru",
          "user": "merkulov",
          "folders": [

          ],
          "rbenv": {
            "version": "2.1.5",
            "gems": [
              {
                "name": "bundler"
              }
            ]
          }
        },
          "stage_christ_leather_ru": {
              "backup": true,
              "ruby_server": {
                  "enable": true,
                  "type": "unicorn",
                  "environment": "staging",
                  "www": false,
                  "server_name": [
                      "stage.christ-leather.ru"
                  ]
              },
              "db": [
                  {
                      "type": "postgresql",
                      "name": "christ_stage_db",
                      "user": "christ",
                      "password": "12345678",
                      "pool": 8
                  }
              ],
              "name": "stage_christ_leather_ru",
              "user": "merkulov",
              "folders": [

              ],
              "rbenv": {
                  "version": "2.1.5",
                  "gems": [
                      {
                          "name": "bundler"
                      }
                  ]
              }
          }
      }
    }
  },
  "run_list": [
    "role[base]",
    "role[base_ruby]",
    "recipe[vsftpd::_pam_virtual]",
    "recipe[rails]",
    "recipe[rails::apps]",
    "role[newrelic]"
  ]
}